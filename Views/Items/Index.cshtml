@model List<MyApp.Models.Item>
@{
	ViewData["Title"] = "Index";
}
<h3>Index</h3>

<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Price</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.Price.ToString("N2") $</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
		
	</tbody>
	
</table>
<div class="mt-3">
	<a class="btn btn-success" asp-area="" asp-controller="Items" asp-action="Create">ADD Item</a>
</div>
